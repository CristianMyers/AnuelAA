<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Texto con el nombre Anuel AA -->
    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anuel AA"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:padding="8dp" />

    <!-- Imagen en la parte superior -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="220dp"
        android:layout_height="275dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nameTextView"
        android:background="@drawable/red_border"
        android:src="@drawable/anuel1" />

    <!-- Botón para reproducir audio debajo de la imagen -->
    <Button
        android:id="@+id/playAudioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Reproducir Audio"
        android:backgroundTint="#FF0000" />

    <!-- VideoView debajo del botón de audio -->
    <VideoView
        android:id="@+id/myVideoView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/playAudioButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/red_border"/>

    <!-- Botón para reproducir video debajo del VideoView -->
    <Button
        android:id="@+id/playVideoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myVideoView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Reproducir Video"
        android:backgroundTint="#FF0000" />

    <!-- Botón para animar la imagen debajo del botón de video -->
    <Button
        android:id="@+id/animateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playVideoButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Animar Imagen"
        android:backgroundTint="#FF0000" />
    
</RelativeLayout>

